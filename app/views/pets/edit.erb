# edit.erb
<h1>Update Pet</h1>
 
<h2>Edits for <%= @pet.name %></h2>
 
  <form id="pet_edit" action="/pets/<%= @pet.id %>" method="post">

    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <select name="pet[owner_id]" id="owner_id" form="pet_edit">
      <% @owners.each do |owner| %>
          <option value="<%= owner.id %>" <%='selected' if @pet.owner_id == owner.id %>><%= owner.name %></option>
      <% end %>
    </select>
    <br>
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>